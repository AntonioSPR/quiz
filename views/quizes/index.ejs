
<h3>Lista de preguntas</h3>
<table>
<% var i; for (i=0; i<quizes.length; i++) { %>
	<tr>
		<td><a href="quizes/<%= quizes[i].id %>"> <%= quizes[i].id %>.- <%= quizes[i].pregunta %></a></td>
		<% if(session.user) { %>
			<td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
			<td>
				<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
					<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
						borrar
					</button>
				</form>
			</td>
		<% } %>
	</tr>
<% } %>
</table>

<br>
<h3>Buscar pregunta</h3>
<form method="get" action="/quizes">
	<input type = "text" name="pregunta" placeholder="Buscar"/>
	<input type="submit" value="Enviar"/>
</form>

<br>
<h3>Buscar tema</h3>
<form method="get" action="/quizes">
	<select name="tema">
		<option value="Ciencia">
	  		Ciencia
			</option>
		<option value="Geografía">
			Geografía
		</option>
		<option value="Humanidades">
			Humanidades
		</option>
		<option value="Ocio">
			Ocio
		</option>
		<option value="Tecnología">
			Tecnología
		</option>
	</select>
	<input type="submit" value="Enviar"/>
</form>

<% if(session.user) { %>
	<br>
	<h3>Crear pregunta</h3>
	<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>